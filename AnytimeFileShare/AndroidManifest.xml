        <activity
            android:name="com.hq.anytimefileshare.RemoteFileListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hq.anytimefileshare.LocalFileListActivity"
            android:label="@string/app_name" >

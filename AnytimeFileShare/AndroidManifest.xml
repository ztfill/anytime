    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >        
        <activity
            android:name="com.hq.anytimefileshare.RemoteListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.hq.anytimefileshare.ConnectActivity"
            android:label="@string/new_connect" >
